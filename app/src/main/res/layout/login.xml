<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/back_title"  />

    <RelativeLayout
        android:id="@+id/login_layout_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="15dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="5dp"
        android:background="@drawable/transparent">

        <TextView
            android:id="@+id/login_text_uid"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/account" />

        <EditText
            android:id="@+id/login_et_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/login_text_uid"
            android:layout_alignLeft="@+id/login_text_uid"
            android:layout_alignRight="@+id/login_text_uid"
            android:layout_alignTop="@+id/login_text_uid"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="65dp" />

        <ImageView
            android:id="@+id/login_img_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/login_text_uid"
            android:layout_alignTop="@+id/login_text_uid"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@null"
            android:visibility="gone" />

        <TextView
            android:id="@+id/login_text_pwd"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/login_text_uid"
            android:layout_alignRight="@+id/login_text_uid"
            android:layout_below="@+id/login_text_uid"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/password" />

        <EditText
            android:id="@+id/login_et_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/login_text_pwd"
            android:layout_alignLeft="@+id/login_text_pwd"
            android:layout_alignRight="@+id/login_text_pwd"
            android:layout_alignTop="@+id/login_text_pwd"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:paddingLeft="65dp" />

        <Button
            android:id="@+id/login_btn_login"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/login_text_uid"
            android:layout_alignRight="@+id/login_text_uid"
            android:layout_below="@+id/login_text_pwd"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/login_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_btn_login"
            android:text="@string/remember_password"
            android:checked="false"
            android:textSize="12sp"
            android:textColor="@color/gray"/>

        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/login_remember"
            android:layout_alignLeft="@+id/login_btn_login"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="@string/register"
            android:textSize="16sp"
            android:textColor="@color/gray"/>

        <Button
            android:id="@+id/forget"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/login_remember"
            android:layout_alignRight="@+id/login_btn_login"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/forget"
            android:textSize="16sp"
            android:textColor="@color/gray"/>

    </RelativeLayout>
</RelativeLayout>